<Page x:Class="ADOCrud.Pages.UpdatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ADOCrud.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UpdatePage">

    <Border Background="wheat">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Button
                    x:Name="updateexit_btn"
                    Click="exitbtn_click"   
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="20 20 0 0"
                    Foreground="#F54126"
                    Style="{StaticResource MaterialDesignIconForegroundButton}">
                <materialDesign:PackIcon Kind="Backburger" />
            </Button>
            

            <DockPanel Grid.Row="0">
                <TextBox
                    x:Name="update_id"
                    materialDesign:HintAssist.Hint="Id"
                    VerticalAlignment="center"
                    HorizontalAlignment="Center"
                    Width="300"/>
            </DockPanel>
            
            <DockPanel Grid.Row="1">
                <TextBox
                    x:Name="firstname"
                    materialDesign:HintAssist.Hint="First Name"
                    VerticalAlignment="center"
                    HorizontalAlignment="Center"
                    Width="300"/>
            </DockPanel>

            <DockPanel Grid.Row="2">
                <TextBox
                    x:Name="lastname"
                    materialDesign:HintAssist.Hint="Last Name"
                    VerticalAlignment="center"
                    HorizontalAlignment="Center"
                    Width="300"/>
            </DockPanel>

            <DockPanel Grid.Row="3">
                <TextBox
                    x:Name="email"
                    materialDesign:HintAssist.Hint="Email"
                    materialDesign:HintAssist.HelperText="Please insert @gmail.com format email addres"
                    VerticalAlignment="center"
                    HorizontalAlignment="Center"
                    Width="300"/>
            </DockPanel>

            <DockPanel Grid.Row="4">
                <PasswordBox 
                    x:Name="password"
                    materialDesign:HintAssist.Hint="Password"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    VerticalAlignment="center"
                    HorizontalAlignment="Center"
                    Width="300"/>
            </DockPanel>

            <DockPanel Grid.Row="5">
                <Button
                x:Name="update"
                Click="update_click"
                Width="200"
                Height="30"
                VerticalAlignment="Top"
                Style="{StaticResource MaterialDesignRaisedButton}"
                materialDesign:ButtonAssist.CornerRadius="10">
                    <TextBlock Text="UPDATE"/>
                </Button>
            </DockPanel>

        </Grid>
    </Border>

</Page>
